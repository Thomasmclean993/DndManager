<h1>Game Master Landing Page</h1>

<h2>Player Dashboard</h2>
<table>
  <thead>
    <tr>
      <th>List of players</th>
      <th>Player ID </th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.id %></td>
        <td><%= link_to "Show", player %></td>
        <td><%= link_to "Edit", edit_player_path(player) %></td>
        <td><%= link_to "Destroy", player, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Player",new_player_path %><br>


<h2>Character Anvil</h2>
<table>
  <thead>
    <tr>
      <th>List of PCs</th>
      <th>Character's Owner </th>
      <th>Character's Race</th>
      <th>Character's level</th>
      <th>Character's Class</th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.owner %></td>
        <td><%= character.race %></td>
        <td><%= character.level %></td>
        <td><%= character.role %></td>
        <td><%= link_to "Show", character %></td>
        <td><%= link_to "Edit", edit_character_path(character) %></td>
        <td><%= link_to "Destroy", character, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Character", new_character_path %><br>  


<h2>Campaign WorkShop</h2>  
<% @campaigns.each do |campaign| %>

  <%= link_to "New Session", create_campaign_path(campaign) %> 
  <%= link_to "Show", campaign %> 
  <%= link_to "Edit", edit_campaign_path(campaign) %> 
  <%= link_to "Destroy", campaign, method: :delete, data: { confirm: "Are you sure?" } %> 
<% end %> 

 <br> 

<%= link_to "Start a New Campaign", new_campaign_path %><br>  



