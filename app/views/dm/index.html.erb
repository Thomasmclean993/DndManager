<h1>Game Master Landing Page</h1>

<h2>Player Dashboard</h2>
<table>
  <thead>
    <tr>
      <th>List of players</th>
      <th>Player ID </th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.id %></td>
        <td><%= link_to "Show", player %></td>
        <td><%= link_to "Edit", edit_player_path(player) %></td>
        <td><%= link_to "Destroy", player, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Player",new_player_path %><br>


