<h1>Game Master Landing Page</h1>

<h2>Player Dashboard</h2>
<table>
  <thead>
    <tr>
      <th>List of players</th>
      <th>Player ID </th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.id %></td>
        <td><%= link_to "Show", player %></td>
        <td><%= link_to "Edit", edit_player_path(player) %></td>
        <td><%= link_to "Destroy", player, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Player",new_player_path %><br>


<h2>Character Anvil</h2>
<table>
  <thead>
    <tr>
      <th>List of PCs</th>
      <th>Character's Owner </th>
      <th>Character's Race</th>
      <th>Character's level</th>
      <th>Character's Class</th>
      <th colspan="3" ></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.name %></td>
        <td><%= character.owner %></td>
        <td><%= character.race %></td>
        <td><%= character.level %></td>
        <td><%= character.role %></td>
        <td><%= link_to "Show", character %></td>
        <td><%= link_to "Edit", edit_character_path(character) %></td>
        <td><%= link_to "Destroy", character, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Character", new_character_path %><br>  


<h2>Campaign WorkShop</h2>  
<table>
  <thead>
    <th>Name of Campaign</th>
    <th>Campaign's DM</th>
    <th>Current Session</th>
    <th>Player's in Session</th>
    <th colspan="3" ></th>
  </thead>

<tbody>
<% @campaigns.each do |campaign| %> 
  <tr>
  
    <td><%=campaign.name %></td>
    <td><%=campaign.dm_player_id %></td>
    <%# <td><%=campaign.sessions %></td> 
    <td><%# <%= link_to "New Session", new_session_path %>  </td>
    <td><%= link_to "Show", campaign %> </td>
    <td><%= link_to "Edit", edit_campaign_path(campaign) %> </td>
    <td><%= link_to "Destroy", campaign, method: :delete, data: { confirm: "Are you sure?" } %></td> 
    </tr>
    <% end %> 
</table>
