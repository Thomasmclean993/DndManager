<h1>The collection of Weapons</h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Type of Weapon</th>
            <th>Range</th>
            <th>Hit/Dc</th>
            <th>Damage</th>
            <th>Notes</th>
            <th>Weight</th>
            <th>Cost</th>
            <th>Special Abilities </th>
            <th colspan="3" ></th>
        </tr>
        <tr>
            <% @weapons.each do |weapon| %>
                <td><%= weapon.name %></td>
                <td><%= weapon.weapon_types%></td>
                <td><%= weapon.range%></td>
                <td><%= weapon.hit_dc%></td>
                <td><%= weapon.damage%></td>
                <td><%= weapon.notes%></td> 
                <td><%= weapon.weight%></td>
                <td><%= weapon.cost%></td>
                <td><%= weapon.special%></td>
                <td><%= link_to "Show", weapon %></td>
                <td><%= link_to "Edit", edit_weapon_path(weapon) %></td>
                <td><%= link_to "Destroy", weapon, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
            <% end %>
        </tr>
    </table>
<%= link_to 'Create a Weapon', new_weapon_path %>
